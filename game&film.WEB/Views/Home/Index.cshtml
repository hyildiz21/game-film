<body>


    <form>


        <div class="text-center">
            <h1 class="text-gray-400 fs-2hx">Welcome</h1>

            <input id="nameInput" name="name" />
            <input id="lastnameInput" name="lastname" />
            <input id="usernameInput" name="username" />
            <input id="passwordInput" name="password" />
            <input id="email" name="email" />
            <input id="userIdInput" name="userId" />


            <button type="button" class="btn btn-danger" onclick="GetUserJson()">Kullanıcı Getir</button>
            <button type="submit" class="btn btn-success" asp-action="AddUser" asp-controller="Home">Kullanıcı Ekle</button>
