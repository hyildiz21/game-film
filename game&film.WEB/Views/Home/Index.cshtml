<script>

    function GetUserJson() {
        $.ajax({
            url: '@Url.Action("GetUser", "Home")',
            type: "GET",
            data: {},
            success: function (data) {

                if (data == null) {
                    alert("Boş data");
                }
                else {
                    $.each(data, function (i, item) {

                        document.getElementById("nameInput").value = item.name;
                        document.getElementById("lastnameInput").value = item.lastname;
                        document.getElementById("usernameInput").value = item.username;
                        document.getElementById("passwordInput").value = item.password;
                        document.getElementById("email").value = item.email;
                        document.getElementById("userIdInput").value = item.userId;




                    });
                }

            }
        });
    }




</script>


