<script>



    function AddGameJson() {

        const nameInput = document.getElementById("gameNameInput").value;
        const categorySelect = document.getElementById("gameCategoryIdSelect").value;
        const stateSelect = document.getElementById("stateSelect").value;

        var model = {
            gameName: nameInput,
            gameCategoryId: categorySelect,
            state: stateSelect
        }

        $.ajax({

            url: '@Url.Action("AddGameJson","Game")',
            type: "POST",
            data: { gameModelWeb: model },
            success: function (data) {
                if (data == "NULL") {
                    Swal.fire({
                        html: `<strong>Zorunlu Alanları Doldurunuz</strong>`,
                        text: "",
                        icon: "info",
                        buttonsStyling: false,
                        confirmButtonText: "Kapat",
                        customClass: {
                            confirmButton: "btn btn-info"
                        }
                    });
                }
                else {
                    Swal.fire({
                        text: "Here's a basic example of SweetAlert!",
                        icon: "success",
                        buttonsStyling: false,
                        confirmButtonText: "Ok, got it!",
                        customClass: {
                            confirmButton: "btn btn-primary"
                        }
                    });
                }
            }

        });





    }





</script>

