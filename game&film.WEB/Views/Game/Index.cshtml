<script>

    function Click(){

        var searchElement = document.querySelector("#kt_search_example_1");
        var search = KTSearch.getInstance(searchElement);

        var name=document.getElementById("GameName");
        var info=document.getElementById("GameInfo");
        name.innerHTML = "Hades";
        info.innerHTML = "Metro";



        var firstDiv = document.querySelector('#GameCard1');
       
        var targetDiv= document.querySelector('#TargetDiv');

        
        if(firstDiv.style.display=="block"){
            // Clone the element and change its ID
            var clone = firstDiv.cloneNode(true);
            clone.id = 'GameCard2';

            // Append the clone to the DOM
            targetDiv.appendChild(clone);

        }else{
            firstDiv.style.display = "block"
            
        }
       

    }

    function Load() {




        var containers = document.querySelectorAll(".draggable-zone");

        if (containers.length === 0) {
            return false;
        }

        var swappable = new Swappable.default(containers, {
            draggable: ".draggable",
            handle: ".draggable .draggable-handle",
            mirror: {
                //appendTo: selector,
                appendTo: "body",
                constrainDimensions: true
            }
        });

        $('#kt_docs_repeater_advanced').repeater({
            initEmpty: false,

            defaultValues: {
                'text-input': 'foo'
            },

            show: function () {
                $(this).slideDown();

                // Re-init select2
                $(this).find('[data-kt-repeater="select2"]').select2();

                // Re-init flatpickr
                $(this).find('[data-kt-repeater="datepicker"]').flatpickr();

                // Re-init tagify
                new Tagify(this.querySelector('[data-kt-repeater="tagify"]'));
            },

            hide: function (deleteElement) {
                $(this).slideUp(deleteElement);
            },

            ready: function () {
                // Init select2
                $('[data-kt-repeater="select2"]').select2();

                // Init flatpickr
                $('[data-kt-repeater="datepicker"]').flatpickr();

                // Init Tagify
                new Tagify(document.querySelector('[data-kt-repeater="tagify"]'));
            }
        });
    }



</script>