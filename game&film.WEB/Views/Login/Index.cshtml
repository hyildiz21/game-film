@{
    Layout = null;

    var isLogin = "";
    isLogin = ViewData["LoginError"].ToString();
}

<html lang="en">
<!--begin::Head-->
<head>
    <base href="../../../" />
    <title>Game & Film</title>
    <meta charset="utf-8" />
    <meta name="description" content="GMS" />
    <meta name="keywords" content="Games, movies, series, movies and musics" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="GMS" />
    <meta property="og:url" content="https://keenthemes.com/metronic" />
    <meta property="og:site_name" content="Keenthemes | Metronic" />
    <link rel="canonical" href="https://preview.keenthemes.com/metronic8" />
    <link rel="shortcut icon" href="assets/media/logos/gaming.ico" />
    <!--begin::Fonts(mandatory for all pages)-->
    <link href="https://fonts.googleapis.com/css2?family=Bree+Serif&display=swap" rel="stylesheet">
    <!--end::Fonts-->
    <!--begin::Global Stylesheets Bundle(mandatory for all pages)-->
    <link href="assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Global Stylesheets Bundle-->
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="app-blank" style="font-family: 'Bree Serif', serif; " onload="Test()">
    <!--begin::Theme mode setup on page load-->
    <script>var defaultThemeMode = "light"; var themeMode; if (document.documentElement) { if (document.documentElement.hasAttribute("data-bs-theme-mode")) { themeMode = document.documentElement.getAttribute("data-bs-theme-mode"); } else { if (localStorage.getItem("data-bs-theme") !== null) { themeMode = localStorage.getItem("data-bs-theme"); } else { themeMode = defaultThemeMode; } } if (themeMode === "system") { themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light"; } document.documentElement.setAttribute("data-bs-theme", themeMode); }</script>
    <!--end::Theme mode setup on page load-->
    <!--begin::Root-->
    <div class="d-flex flex-column flex-root" id="kt_app_root">
        <!--begin::Authentication - Sign-in -->
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">
            <!--begin::Body-->
            <div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1" style="background-image:url(assets/media/auth/bg9-dark.jpg); ">
                <!--begin::Form-->
                <div class="d-flex flex-center flex-column flex-lg-row-fluid">
                    <!--begin::Wrapper-->
                    <div class="w-lg-500px p-10">
                        <!--begin::Form-->
                        <form>
                            <!--begin::Heading-->
                            <div class="text-center mb-11">
                                <div class="d-flex flex-center mb-15">
                                    <a href="#">
                                        <img src="~/assets/media/auth/gaming.png" class="max-h-20px" alt="" style="width:60%">
                                    </a>
                                </div>


                                <!--begin::Title-->
                                <h1 class="text-white fw-bolder mb-3">Giriş Yap</h1>
                                <!--end::Title-->
                                <!--begin::Subtitle-->
                                <div class="text-white fw-semibold fs-5">Oyunlar, Filmler, Diziler, Kitaplar ve Müzikler</div>
                                <!--end::Subtitle=-->
                            </div>
                            <!--begin::Heading-->
                            @if (isLogin != "")
                            {
                                <!-- Login Alert Start -->
                                <!--begin::Alert-->
                                <div class="alert alert-danger d-flex align-items-center p-5">
                                    <!--begin::Icon-->
                                    <i class="ki-duotone ki-notification-bing fs-2hx text-danger me-4"><span class="path1"></span><span class="path2"></span></i>
                                    <!--end::Icon-->
                                    <!--begin::Wrapper-->
                                    <div class="d-flex flex-column">
                                        <!--begin::Title-->
                                        <h4 class="mb-1 text-dark">Giriş Başarısız!</h4>
                                        <!--end::Title-->
                                        <!--begin::Content-->
                                        <span class="fw-bold text-dark">@isLogin</span>
                                        <!--end::Content-->
                                    </div>
                                    <!--end::Wrapper-->
                                </div>
                                <!--end::Alert-->
                                <!-- Login Alert End -->
                            }
                            <!--begin::Login options-->
                            <!--end::Login options-->
                            <!--begin::Separator-->
                            <div class="separator separator-content my-14">
                                <span class="w-200px text-gray-500 fw-semibold fs-7"></span>
                            </div>
                            <!--end::Separator-->

                            <!--begin: Kullanıcı Adı-->
                            <div class="fv-row mb-8">
                                <div class="input-group mb-8 h-auto text-white placeholder-white bg-dark rounded-pill border-0">
                                    <span class="input-group-text h-auto bg-dark rounded-pill border-0" id="basic-addon1">
                                        <i class="ki-duotone ki-profile-circle fs-2 text-white">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                        </i>
                                    </span>
                                    <input maxlength="20" id="Username" type="text" name="username" autocomplete="off" class="form-control text-white placeholder-white bg-dark rounded-pill border-0" placeholder="Kullanıcı Adı" aria-describedby="basic-addon1" />
                                </div>
                            </div>
                            <!--end: Kullanıcı Adı-->
                            <!--begin: Şifre-->
                            <div class="fv-row mb-8">

                                <div class="input-group mb-8 h-auto text-white placeholder-white bg-dark rounded-pill border-0">
                                    <span class="input-group-text h-auto bg-dark rounded-pill border-0" id="basic-addon1">
                                        <i class="ki-duotone ki-lock-3 fs-2 text-white">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                        </i>
                                    </span>
                                    <input maxlength="20" id="Password" name="password" type="password" class="form-control text-white placeholder-white bg-dark rounded-pill border-0" placeholder="Şifre" autocomplete="off" aria-describedby="basic-addon1" />

                                </div>

                            </div>
                            <!--end: Şifre-->


                            <!--begin::Wrapper-->
                            <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
                                <div></div>
                                <!--begin::Link-->
                                <a href="\" class="link-primary">Şifremi Unuttum</a>
                                <!--end::Link-->
                            </div>
                            <!--end::Wrapper-->
                            <!--begin::Submit button-->
                            <div class="d-grid mb-10">
                                <button type="submit" class="btn btn-icon-success btn btn-light-success btn-text-success bg-light hover-elevate-up" asp-action="SignIn" asp-controller="Login">
                                    <i class="ki-duotone ki-ghost fs-2 text-white">
                                        <i class="path1"></i>
                                        <i class="path2"></i>
                                        <i class="path3"></i>
                                    </i>

                                   Giriş Yap
                                </button>


                                <a href="#" >
                                    
                                </a>


                            </div>
                            <!--end::Submit button-->
                            <!--begin::Sign up-->
                            <div class="mt-10">
                                <span class="text-white mr-4">
                                    Hesabınız yok mu?
                                </span>
                                <br />
                                <a asp-action="Index" asp-controller="SignUp" class="link-primary font-weight-bold"> Şimdi Kayıt Ol</a>
                            </div>

                            <!--end::Sign up-->
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Wrapper-->
                </div>
                <!--end::Form-->

            </div>

            <!--end::Body-->
        </div>
        <!--end::Authentication - Sign-in-->
    </div>
    <!--end::Root-->
    <!--begin::Javascript-->

    <script>var hostUrl = "assets/";</script>
    <!--begin::Global Javascript Bundle(mandatory for all pages)-->
    <script src="assets/plugins/global/plugins.bundle.js"></script>
    <script src="assets/js/scripts.bundle.js"></script>
    <!--end::Global Javascript Bundle-->
    <!--begin::Custom Javascript(used for this page only)-->
    <script src="assets/js/custom/authentication/sign-in/general.js"></script>

    
    <!--end::Custom Javascript-->
    <!--end::Javascript-->
</body>
<!--end::Body-->
</html>



<script>

    $('#Username').maxlength({
        placement: "top-right",
        threshold: 20,
        warningClass: "badge badge-info",
        limitReachedClass: "badge badge-success"
    });

    $('#Password').maxlength({
        placement: "top-right",
        threshold: 20,
        warningClass: "badge badge-info",
        limitReachedClass: "badge badge-success"
    });
    function Test(key, value) {

        key = document.getElementById("Username").value;
        value = document.getElementById("Password").value;


        const searchParams = new URLSearchParams(window.location.search);
        searchParams.set(key, value);

        const newRelativePathQuery = window.location.pathname + "?" + searchParams.toString();
        history.pushState(null, "", newRelativePathQuery);


    }





</script>